@page "{id}"
@model NOVAAPP.Pages.Aprovisionamiento.IndexComprasModel
@{
    ViewData["Title"] = "Compras";
    NumberFormatInfo formato = new CultureInfo("es-CR").NumberFormat;
    formato.CurrencySymbol = "";
    formato.CurrencyGroupSeparator = ",";
    formato.NumberDecimalSeparator = ".";
}
@using System.Globalization;
@using Microsoft.AspNetCore.Http
@using System;
@using System.Collections.Generic;
@using System.IO;
@using System.Linq;
@using System.Security.Claims;
@using System.Threading.Tasks;
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.RazorPages;
@using Microsoft.Extensions.Configuration;
@using Refit;
@inject IHttpContextAccessor httpContextAccessor

@{
    var Roles = ((ClaimsIdentity)User.Identity).Claims.Where(d => d.Type == "Roles").Select(s1 => s1.Value).FirstOrDefault().Split("|");
}
@section scripts {


    <script>
        $(document).ready(function () {




        });
        var idCompras = 0;
        function onClickModal(id) {
            try {
                idCompras = id;
                Swal.fire({
                    title: '¿Desea sincronizar a SAP?',
                    showDenyButton: true,
                    showCancelButton: false,
                    confirmButtonText: `Aceptar`,
                    denyButtonText: `Cancelar`,
                    customClass: {
                        confirmButton: 'swalBtnColor',
                        denyButton: 'swalDeny'
                    },
                }).then((result) => {
                    /* Read more about isConfirmed, isDenied below */
                    if (result.isConfirmed) {

                        SincronizarSAP();

                    }
                })
            } catch (e) {
                console.log(e);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Ha ocurrido un error al intentar imprimir ' + e

                })
            }

        }

        function SincronizarSAP() {
            try {
                $.ajax({
                    type: 'GET',
                    dataType: 'json',
                    url: '@Url.Page("IndexCompras", "SincronizarSAP")',
                    data: { idCompra: idCompras },
                    success: function (result) {
                        $("#divProcesando").modal("hide");
                        console.log(result);
                        if (result == false) {

                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Ha ocurrido un error al intentar sincronizar a SAP'

                            })

                        } else {
                            Swal.fire({
                                title: "Ha sido sincronizado a SAP con éxito",

                                icon: 'success',
                                showCancelButton: false,
                                customClass: {
                                    confirmButton: 'swalBtnColor',

                                },
                                confirmButtonText: 'OK'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.reload();
                                }
                            })
                        }
                    },
                    beforeSend: function () {
                        $("#divProcesando").modal("show");
                    }
                })
            } catch (e) {
                console.log(e);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Ha ocurrido un error al intentar sincronizar a SAP ' + e

                })
            }
        }
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Ordenes de Compra
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="ti-dashboard"></i></a></li>
        <li class="breadcrumb-item active">Listado Ordenes de Compra</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">

            <div class="box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-sm-8"> <h4 class="box-title">Ordenes de Compra</h4></div>



                        <div class="col-sm-4">
                            <a asp-page="./Index" class="nav-link text-dark" style="text-decoration: underline;"><i class="ti-back-left "></i>  Regresar</a>




                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <form method="get">
                        <div class="row">



                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="cyber">Usuario:</label>
                                    <select class="form-control select2" id="UsuarioF" asp-for="filtro.Codigo2" required>
                                        <option value="0"> Seleccione</option>

                                        @foreach (var item in Model.Users)
                                        {
                                            <option value="@item.id">@item.Nombre</option>
                                        }


                                    </select>






                                </div>
                            </div>


                            <div class="col-md-2 " style="text-align: center; padding-top: 2%;">
                                <input type="checkbox" id="md_checkbox_1" class="chk-col-red" asp-for="filtro.Procesado" onclick="this.form.submit()" />
                                <label for="md_checkbox_1"> Procesado SAP</label>
                            </div>






                            <div class="col-sm-10 pl-1" style="text-align: right; padding-top: 2%;">
                                <button title="Buscar" type="submit" class="btn btn-rounded btn-outline-primary"> <i class="fa fa-search"></i></button>
                            </div>




                        </div>

                    </form>
                </div>
            </div>


            <div class="box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-sm-8"> <h4 class="box-title">Ordenes de Compra</h4></div>
                        <div class="col-sm-4">  </div>

                    </div>


                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>ID</th>
                                    <th>Acción</th>
                                    <th>Proveedor</th>
                                    <th>Bodega</th>
                                    <th>Fecha Creado</th>
                                    <th>Moneda</th>
                                    <th>SubTotal</th>
                                    <th>Impuesto</th>
                                    <th>Total</th>
                                    <th>Generado Por</th>
                                    <th>Procesado SAP</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Compras)
                                {
                                    <tr>


                                        <td>
                                            @item.id
                                        </td>
                                        <td align="center" style="padding-top:15px;">


                                            <a asp-page="./ObservarCompra" asp-route-id="@item.id" class="fa fa-info-circle icono"> </a> &nbsp;
                                            &nbsp;
                                           
                                         
                                            @if (item.ProcesadaSAP == false)
                                            {
                                                <a asp-page="./EditarCompra" asp-route-id="@item.id" class="fa fa-edit icono"> </a>
                                              
                                                <a onclick="javascript: onClickModal('@item.id')" title="Insertar a SAP"><img src="/sapX.png" /></a>
                                            }

                                        </td>
                                        <td>
                                            @item.CodProveedor - @item.NombreProveedor
                                        </td>
                                        <td>@item.Bodega</td>

                                        <td>
                                            @item.Fecha.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @item.Moneda
                                        </td>
                                        <td align="center" style="padding-top:15px;"> @(Math.Round(item.Subtotal, 2).ToString("C", formato))</td>
                                        <td align="center" style="padding-top:15px;"> @(Math.Round(item.TotalImpuesto, 2).ToString("C", formato))</td>
                                        <td align="center" style="padding-top:15px;"> @(Math.Round(item.TotalCompra, 2).ToString("C", formato))</td>
                                        <td>
                                            @(Model.Users.Where(a => a.id == item.idUsuarioCreador).FirstOrDefault() == null ? "" : Model.Users.Where(a => a.id == item.idUsuarioCreador).FirstOrDefault().Nombre)


                                        </td>





                                        <td>
                                            @if (item.ProcesadaSAP)
                                            {
                                                <span class="badge badge-pill badge-success">Procesado</span>

                                            }
                                            else
                                            {
                                                <span class="badge badge-pill badge-danger">Sin Procesar</span>
                                            }
                                        </td>


                                    </tr>

                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Acción</th>
                                    <th>Proveedor</th>
                                    <th>Fecha Creado</th>
                                    <th>Moneda</th>
                                    <th>SubTotal</th>
                                    <th>Impuesto</th>
                                    <th>Total</th>
                                    <th>Generado Por</th>
                                    <th>Procesado SAP</th>




                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>

         
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>
<!-- /.content -->