                            &nbsp;



                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="page-header mt-0">
                                <h2 class="d-inline"><span class="font-size-24">Orden de Compra No: @Model.Compra.id</span></h2>
                                <br />
                                <div class="text-left">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h5> <b>Fecha: </b> @Model.Compra.Fecha.ToString("dd/MM/yyyy")</h5>

                                        </div>




                                        <br />




                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-md-6 invoice-col">
                            <strong>Proveedor</strong>
                            <address>
                                <strong class="text-blue font-size-24"> @Model.Compra.CodProveedor - @Model.Compra.NombreProveedor  </strong>


                            </address>
                        </div>
                        <div class="col-md-3">
                            <h5> <b>Usuario Creador: </b> @(Model.Users.Where(a => a.id == Model.Compra.idUsuarioCreador).FirstOrDefault() == null ? "Usuario Inexistente" : Model.Users.Where(a => a.id == Model.Compra.idUsuarioCreador).FirstOrDefault().Nombre)</h5>

                        </div>
                        <div class="col-md-3">
                            <h5> <b>Cond.Pago: </b> @(Model.CP.Where(a => a.id == Model.Compra.idCondPago).FirstOrDefault() == null ? "Cond Pago Inexistente" : Model.CP.Where(a => a.id == Model.Compra.idCondPago).FirstOrDefault().Nombre) </h5>

                        </div>

                   
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- Table row -->
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr class="bg-pale-info">
                                        <th class="text-center">#</th>
                                        <th class="text-center">Producto</th>
                                        <th class="text-center">Bodega</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-center">Precio Unitario</th>
                                        <th class="text-center">Impuesto</th>




                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var i = 0;
                                    }
                                    @foreach (var item in Model.Compra.Detalle)
                                    {
                                        <tr>
                                            <td>@i</td>


                                            <td>
                                                @item.CodigoProducto - @item.NombreProducto 
                                            </td>
                                            <td>  @item.Bodega  - @(Model.Bodegas.Where(a => a.CodSAP == item.Bodega).FirstOrDefault() == null ? "Bodega Inexistente" : Model.Bodegas.Where(a => a.CodSAP == item.Bodega).FirstOrDefault().Nombre)</td>
                                            <td class="text-right">@(Math.Round(item.Cantidad))</td>


                                            <td class="text-center">@Math.Round(item.PrecioUnitario, 2).ToString("C", formato)</td>

                                            <td class="text-center">@Math.Round(@item.TotalImpuesto, 2).ToString("C", formato)</td>




                                        </tr>
                                        i++;
                                    }


                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                        <div class="col-md-12  text-right">


                            <div>
                                <p>Sub Total  : <span> @Math.Round(Model.Compra.Subtotal, 2).ToString("C", formato)</span> </p>
                     
                                <p>Impuesto :  <span>  @Math.Round(Model.Compra.TotalImpuesto, 2).ToString("C", formato)</span></p>
                 

                            </div>
                            <div class="total-payment">
                                <h3><b>Total :</b>  <span>  @Math.Round(Model.Compra.TotalCompra, 2).ToString("C", formato)</span></h3>
                            </div>
                    

                        </div>
                    </div>
                    <!-- /.row -->
                    <!-- /.row -->
               
                </div>
            </div>

            <div class="col-6 box">
                <div class="col-6 box-header with-border">
                    <h4 class="box-title">Comentarios</h4>
                </div>
                <div class="box-body">
                    <td>@Model.Compra.Comentarios</td>

                    <!-- /.box-body -->
                </div>




            </div>
            <!-- Default box -->
    
        </div>
    </div>





    <button id="print" class="btn btn-warning" type="button" onclick="javascript: ImprimirPantalla()"> <span><i class="fa fa-print"></i> Imprimir</span> </button>
</section>



