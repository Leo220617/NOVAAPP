@page
@model MPOrdenes.Pages.Ordenes.IndexModel
@{
    ViewData["Title"] = "Ordenes";

}



@section styles{


}

@section scripts{

    <script>
        $(document).ready(function () {
            jQuery(document).ready(function ($) {
                $(document).ready(function () {
                    $('.mi-selector').select2();
                });
            });
            $(".js-example-responsive").select2({
                width: 'resolve',// need to override the changed default
                height: 'resolve'
            });





        });




    </script>

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Ordenes de Venta
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="ti-dashboard"></i></a></li>
        <li class="breadcrumb-item active">Listado Ordenes de Venta</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">


            <div class="box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-sm-8"> <h4 class="box-title">Ordenes de Venta</h4></div>
                        <div class="col-sm-4"> </div>

                    </div>


                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>DocEntry</th>
                                    <th>Moneda</th>
                                    <th>Cliente</th>
                                    <th>Fecha</th>
                                    <th>Comentarios</th>
                                    <th>Estado</th>

                                    <th>Acción</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Objeto)
                                {
                                <tr>

                                    <td>
                                        @item.DocEntry
                                    </td>

                                    <td>  @item.Moneda </td>
                                    <td>  @item.CardCode - @item.CardName </td>

                                    <td>         @item.DocDate.ToString("dd/MM/yyyy") </td>

                                    <td>  @item.Comentarios </td>
                                    <td>  @item.Estado </td>

                                    <td>
                                        <a asp-page="./Observar" asp-route-id="@item.DocEntry" class="fa fa-info-circle icono" title="Observar Orden"> </a> &nbsp;
                                        <a asp-page="./Produccion" asp-route-id="@item.DocEntry" class="fa fa-wrench icono" title="Producir Orden"> </a> &nbsp;


                                    </td>

                                </tr>

                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>DocEntry</th>
                                    <th>Moneda</th>
                                    <th>Cliente</th>
                                    <th>Fecha</th>
                                    <th>Comentarios</th>
                                    <th>Estado</th>

                                    <th>Acción</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
