@page "{id}"
@model NOVAAPP.Pages.Rutas.EditarModel
@{
    ViewData["Title"] = "Rutas";
}


@section styles {


}

@section scripts {

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Rutas
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="ti-dashboard"></i></a></li>
        <li class="breadcrumb-item active">Editar Ruta</li>
    </ol>
</section>



<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-8">
                            <h6 class="box-subtitle">Editar Ruta</h6>

                        </div>
                        <div class="col-4">
                            <a asp-page="./Index" class="btn btn-outline-info" style="text-decoration: underline;"><i class="ti-back-left "></i>  Regresar</a>

                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col">
                            <form method="post" id="formTipos" role="form" novalidate class="needs-validation " enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input hidden asp-for="Ruta.id" />
                                <div class="col-12">

                                    <div class="row">
                                        <div class="col-xl-6">

                                            <div class="form-group">
                                                <h5>Código<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input maxlenght type="text" asp-for="Ruta.Codigo" class="form-control" required data-validation-required-message="Este campo es requerido" maxlength="7">
                                                </div>

                                            </div>

                                            <div class="form-group">
                                                <h5>Origen<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="text" asp-for="Ruta.Origen" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <h5>Kilometros<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="number" asp-for="Ruta.Km" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>
                                        </div>

                                        <div class="col-xl-6">
                                            <div class="form-group">
                                                <h5>Nombre<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="text" asp-for="Ruta.Nombre" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <h5>Costos<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="number" asp-for="Ruta.Costos" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>



                                        </div>

                                    </div>


                                </div>
                                <div class="text-xs-right">
                                    <button type="submit" class="btn btn-info" title="Guardar Cambios">Guardar Cambios</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
</section>

