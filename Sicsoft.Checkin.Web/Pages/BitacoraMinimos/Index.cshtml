@page
@using System.Globalization
@model NOVAAPP.Pages.BitacoraMinimos.IndexModel
@{
    ViewData["Title"] = "BitacoraMinimos";
    NumberFormatInfo formato = new CultureInfo("es-CR").NumberFormat;
    formato.CurrencySymbol = "";
    formato.CurrencyGroupSeparator = ",";
    formato.NumberDecimalSeparator = ".";

}



@section styles {


}

@section scripts {

    <script>
        $(document).ready(function () {
            jQuery(document).ready(function ($) {
                $(document).ready(function () {
                    $('.mi-selector').select2();
                });
            });
            $(".js-example-responsive").select2({
                width: 'resolve',// need to override the changed default
                height: 'resolve'
            });





        });

        var ids = 0;
        function onClickModal(id) {
            ids = id;
            Swal.fire({
                title: '¿Desea eliminar esta Bitácora?',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: `Aceptar`,
                denyButtonText: `Cancelar`,
                customClass: {
                    confirmButton: 'swalBtnColor',
                    denyButton: 'swalDeny'
                },
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {

                    Eliminar();

                }
            })

        }
        function Eliminar() {

            $.ajax({
                type: 'GET',
                dataType: 'json',
                url: '@Url.Page("Index", "Eliminar")',
                data: { id: ids },
                success: function (result) {

                    if (result == false) {
                        ids = 0;
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Ha ocurrido un error al intentar eliminar'

                        })

                    } else {
                        Swal.fire({
                            title: "Ha sido eliminado con éxito",

                            icon: 'success',
                            showCancelButton: false,
                            customClass: {
                                confirmButton: 'swalBtnColor',

                            },
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.reload();
                            }
                        })
                    }
                },
                beforeSend: function () {

                }
            })
        }



    </script>

}



<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Bitácora Minimos
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="ti-dashboard"></i></a></li>
        <li class="breadcrumb-item active">Listado Bitácora Minimos</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
                   <div class="box">
                
                    <div class="box-body">
                        <form method="get">
                            <div class="row">
                                <div class="col-sm-2 pr-1">
                                    <div class="form-group">
                                        <label>Fecha Inicial</label>
                                        <input class="form-control " id="FecInicial" type="date" asp-for="filtro.FechaInicial">
                                    </div>


                                </div>

                                <div class="col-sm-2 pl-1">
                                    <div class="form-group">
                                        <label>Fecha Final</label>
                                        <input class="form-control" id="FecFinal" type="date" asp-for="filtro.FechaFinal">
                                    </div>
                                </div>

  
                     
                   
                               

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="cyber">Bodega:</label>
                                    <select class="form-control select2" id="Bodega" asp-for="filtro.Codigo2" required>
                                        <option value="0"> Seleccione</option>

                                        @foreach (var item in Model.Bodegas)
                                        {
                                            <option value="@item.id"> @item.CodSAP - @item.Nombre</option>
                                        }


                                    </select>






                                </div>
                            </div>
                  
                               <div class="col-md-2">
                                <div class="form-group">
                                    <label for="cyber">Categoría:</label>
                                    <select class="form-control select2" id="Caja" asp-for="filtro.Codigo1" required>
                                        <option value="0"> Seleccione</option>

                                        @foreach (var item in Model.Categorias)
                                        {
                                                <option value="@item.id"> @item.CodSAP - @item.Nombre</option>
                                        }


                                    </select>






                                </div>
                            </div>
                            <div class="col-sm-2 pr-1">
                                <div class="form-group">
                                    <label>Código Producto</label>
                                    <input type="text" class="form-control" asp-for="filtro.Buscar" />
                                </div>
                            </div>

                            <div class="col-sm-12 pl-1" style="text-align: right; padding-top: 2%;">
                                <button title="Buscar" type="submit" class="btn btn-rounded btn-outline-primary"> <i class="fa fa-search"></i></button>
                            </div>
                      




                        </div>

                    </form>
                </div>
            </div>

            <div class="box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-sm-8"> <h4 class="box-title"> Bitácora Minimos</h4></div>
                     

                    </div>


                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Acción</th>
                                  
                                    <th>Código</th>
                                    <th>Nombre</th>
                                    <th>Bodega</th>
                                    <th>Categoria</th>
                                    <th>Minimo</th>
                                    <th>Stock</th>
                                    <th>Fecha</th>
                          


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Objeto)
                                {
                                    <tr>

                                        <td>
                                            @item.id
                                        </td>
                                        <td align="center" style="padding-top:15px;">
                                 
                                            <a onclick="javascript: onClickModal('@item.id')" class="fa fa-trash icono"></a>
                                            &nbsp;

                                        </td>
                                       

                                        <td>
                                            @item.CodigoProducto
                                        </td>
                                        <td>
                                            @item.NombreProducto
                                        </td>
                                        <td>  @(Model.Bodegas.Where(a => a.id == item.idBodega).FirstOrDefault() == null ? "Bodega Inexistente" : Model.Bodegas.Where(a => a.id == item.idBodega).FirstOrDefault().CodSAP + "-" + Model.Bodegas.Where(a => a.id == item.idBodega).FirstOrDefault().Nombre) </td>
                                        <td>  @(Model.Categorias.Where(a => a.id == item.idCategoria).FirstOrDefault() == null ? "Categoria Inexistente" : Model.Categorias.Where(a => a.id == item.idCategoria).FirstOrDefault().CodSAP + "-" + Model.Categorias.Where(a => a.id == item.idCategoria).FirstOrDefault().Nombre) </td>

                                        <td>  @Math.Round(@item.Minimo, 2).ToString("C", formato)</td>
                                        <td>  @Math.Round(@item.Stock, 2).ToString("C", formato)</td>
                                  

                                        <td>
                                            @item.Fecha
                                        </td>



                                    </tr>

                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Acción</th>
                               
                                    <th>Código</th>
                                    <th>Nombre</th>
                                    <th>Bodega</th>
                                    <th>Categoria</th>
                                    <th>Minimo</th>
                                    <th>Stock</th>
                                    <th>Fecha</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
