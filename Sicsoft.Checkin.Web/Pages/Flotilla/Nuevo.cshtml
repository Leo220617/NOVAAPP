@page
@model NOVAAPP.Pages.Flotilla.NuevoModel
@{
    ViewData["Title"] = "Flotilla";
}


@section styles {


}

@section scripts {

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Flotilla
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="ti-dashboard"></i></a></li>
        <li class="breadcrumb-item active">Crear Nueva Flotilla</li>
    </ol>
</section>



<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-8">
                            <h6 class="box-subtitle"> Crear Nueva Flotilla</h6>

                        </div>
                        <div class="col-4">
                            <a asp-page="./Index" class="btn btn-outline-info" style="text-decoration: underline;"><i class="ti-back-left "></i>  Regresar</a>

                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col">
                            <form method="post" id="formTipos" role="form" novalidate class="needs-validation " enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-12">

                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group">
                                                <h5>Nombre<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="text" asp-for="Flotilla.Nombre" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>


                                            <div class="form-group">
                                                <h5>Placa<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="text" asp-for="Flotilla.Placa" maxlength="10" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>

                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group">
                                                <h5>Peso<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="number" asp-for="Flotilla.Peso" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <h5>Volumen<span class="text-danger">*</span></h5>
                                                <div class="controls">
                                                    <input type="number" asp-for="Flotilla.Volumen" class="form-control" required data-validation-required-message="Este campo es requerido">
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <h5>Estado </h5>
                                                <div class="controls">
                                                    <select asp-for="Flotilla.Estado" class="form-control select2">
                                                        <option value="1">Activo</option>
                                                        <option value="0">Desativado</option>
                                                    </select>
                                                </div>

                                            </div>
                                        </div>

                                    </div>


                                </div>
                                <div class="text-xs-right">
                                    <button type="submit" class="btn btn-info" title="Guardar Cambios">Guardar Cambios</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
</section>
